<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_selected="true" android:state_focused="true" >
        
        <shape>
            
            <stroke
                android:width="1dp"
                android:color="@color/gainsboro"
                android:dashWidth="5dp" 
                android:dashGap="3dp" />
           
            <corners
                android:radius="5dp" />
            
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
        
    </item>
   
    <item>
        
        <shape>
            <solid 
                android:color="@color/seashell"/>
            
            <stroke
                android:width="1dp"
                android:color="@color/gainsboro" />
            
            <corners 
                android:radius="3dp" />
            
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
        
    </item>

</selector>