<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item> 
    </style>
    
    <style name="style_post_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_post_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">5</item> 
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textSize">16dp</item>
    </style>
    
    <style name="style_post_property">
        <item name="android:textColor">@color/slategray</item>
        <item name="android:textSize">14dp</item>
    </style>
    
    <style name="style_post_hot_spinner">
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    
</resources>